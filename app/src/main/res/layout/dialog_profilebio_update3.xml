<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/profile_bar_gradient"/>

    <in.kriger.newkrigercampus.extras.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:id="@+id/tool"
        android:textStyle="bold"
        android:text="Fill your intro (3/3)"
        android:ellipsize="end"
        android:textColor="@color/White"
        android:textSize="22sp" />

    <in.kriger.newkrigercampus.extras.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@drawable/profile_bar_gradient"
        android:layout_alignParentEnd="true"
        android:text="SAVE"
        android:textColor="@color/white"
        android:id="@+id/button_positive"
        android:paddingRight="10dp"
        android:gravity="center"
        android:textSize="18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/cover_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <in.kriger.newkrigercampus.extras.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_marginTop="80dp"
            android:gravity="center"
            android:id="@+id/dialogue_text"
            android:textColor="@color/Black"
            android:textSize="16sp" />



    <!--<in.kriger.krigercampus.extras.CustomTextViewBold-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:textAlignment="center"-->
        <!--android:textSize="22sp"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:text="@string/upload_profile_picture_bio"-->
        <!--android:id="@+id/dialogue_text"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:textStyle="bold"-->
        <!--android:textColor="@color/Black"-->
        <!--/>-->



        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:id="@+id/qualification_layout"
        android:background="@drawable/button_background_blue"
        android:layout_marginTop="15dp">

        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:id="@+id/edittext_qualification"
            android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/down_arrow_hide" />

</RelativeLayout>

        <in.kriger.newkrigercampus.extras.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_subjects"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>


        <in.kriger.newkrigercampus.extras.CustomAutoCompleteTextView
            android:id="@+id/subjects_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@drawable/button_background_blue"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:padding="3dp"
            android:drawableRight="@drawable/ic_search_24dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/layout_flow_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:flChildSpacing="8dp"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="8dp">

        </com.nex3z.flowlayout.FlowLayout>

        <in.kriger.newkrigercampus.extras.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_exams"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>


        <in.kriger.newkrigercampus.extras.CustomAutoCompleteTextView
            android:id="@+id/exams_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@drawable/button_background_blue"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:padding="3dp"
            android:drawableRight="@drawable/ic_search_24dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/layout_flow_exams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:flChildSpacing="8dp"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="8dp">

        </com.nex3z.flowlayout.FlowLayout>






        <in.kriger.newkrigercampus.extras.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:id="@+id/textview_req"
            android:padding="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"/>


        <!--<in.kriger.krigercampus.extras.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:text="Save &amp; Continue"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:paddingRight="20dp"
            android:textSize="20sp"
            android:background="@drawable/profile_bar_gradient_round"
            android:textColor="@color/White"
            />-->


        <in.kriger.newkrigercampus.extras.CustomButton
            android:text="@string/having_trouble"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="@color/Offline"
            android:padding="5dp"
            android:textAllCaps="false"
            android:background="@color/White"
            android:id="@+id/button_login_trouble"
            />


    </LinearLayout>


</RelativeLayout>
</ScrollView>




