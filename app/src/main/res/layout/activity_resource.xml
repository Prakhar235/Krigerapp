<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.ResourceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/resource_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

        <in.kriger.newkrigercampus.extras.CustomTextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/resource_image"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:id="@+id/name"
        android:textSize="22dp"
        android:textColor="@color/black"/>

    <in.kriger.newkrigercampus.extras.CustomTextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:id="@+id/type"
        android:textSize="16dp"
        android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <RatingBar
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:theme="@style/RatingBar"
        android:isIndicator="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/Black"
            android:id="@+id/rate_text" />

                <in.kriger.newkrigercampus.extras.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/Black"
                    android:id="@+id/review_text" />

            </LinearLayout>

        </LinearLayout>

        <in.kriger.newkrigercampus.extras.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exam_layout"
            android:background="@drawable/button_background_round_blue"
            android:id="@+id/rating"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:padding="7dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Submit Rating" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listed By : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />

    <in.kriger.newkrigercampus.extras.CustomTextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/owner"
        android:textColor="@color/Blue"
        android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/sub_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subjects :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />


            <com.nex3z.flowlayout.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flow_sub"
                app:itemSpacing="8dp">
            </com.nex3z.flowlayout.FlowLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_layout"
            android:id="@+id/exam_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exams :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />

            <com.nex3z.flowlayout.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flow_exams"
                app:itemSpacing="8dp">

            </com.nex3z.flowlayout.FlowLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />


        <in.kriger.newkrigercampus.extras.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/class_type"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />


            <in.kriger.newkrigercampus.extras.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/fees"
                android:textColor="@color/black"
                />

        </LinearLayout>

            <in.kriger.newkrigercampus.extras.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:id="@+id/fees_type"
                android:visibility="gone"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/timing_layout">

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />

        <in.kriger.newkrigercampus.extras.CustomTextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:id="@+id/description"
            android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Views : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />



        <in.kriger.newkrigercampus.extras.CustomTextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
            android:textSize="18sp"
        android:id="@+id/views"
        android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shares : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />

    <in.kriger.newkrigercampus.extras.CustomTextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:id="@+id/shares"
        android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted on : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />

            <in.kriger.newkrigercampus.extras.CustomTextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
                android:textSize="18sp"
        android:id="@+id/timestamp"
        android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_total_enq"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <in.kriger.newkrigercampus.extras.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Enquiries : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black" />

            <in.kriger.newkrigercampus.extras.CustomTextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="0"
                android:textSize="18sp"
                android:id="@+id/total_enq"
                android:textColor="@color/black"/>
        </LinearLayout>


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:id="@+id/layout_enquiry"
        android:visibility="gone"
        android:background="@drawable/profile_bar_gradient"
        android:orientation="horizontal">

        <in.kriger.newkrigercampus.extras.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enquiry"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="Enquiries Received"/>

        <in.kriger.newkrigercampus.extras.CustomTextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/input_circle_normal"
            android:backgroundTint="@color/Offline"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:id="@+id/enquiry_added" />

    </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />



    </LinearLayout>




    </ScrollView>


    <in.kriger.newkrigercampus.extras.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background_round_blue"
        android:textColor="@color/white"
        android:text="Enquire Now"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:padding="7dp"
        android:id="@+id/btn_enquire" />



</RelativeLayout>