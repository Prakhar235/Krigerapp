<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reset_password"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="in.kriger.newkrigercampus.ResetPasswordActivity">

        <ImageView
            android:id="@+id/kc_icon"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/kriger_logo" />


        <in.kriger.newkrigercampus.extras.CustomTextView
            android:id="@+id/forgotpwd_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kc_icon"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Forgot Password?"
            android:textColor="@color/Blue"
            android:textStyle="bold"
            android:textSize="22sp" />


        <in.kriger.newkrigercampus.extras.CustomEditText
            android:id="@+id/editText_reset_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgotpwd_text"
            android:layout_marginTop="40dp"
            android:hint="@string/registered_email"
            android:inputType="textWebEmailAddress"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Blue"
            android:textSize="15sp" />


        <in.kriger.newkrigercampus.extras.CustomButton
            android:id="@+id/button_reset_send"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/profile_bar_gradient_round"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/send"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />



</RelativeLayout>
