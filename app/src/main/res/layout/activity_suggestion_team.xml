            <ImageView
                android:id="@+id/kc_icon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/kriger_logo" />

            <in.kriger.newkrigercampus.extras.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Help Us Get Better!"
                android:textAlignment="center"
                android:textColor="#3994e4"
                android:textSize="25sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1"
                android:theme="@style/RatingBar" />

            <in.kriger.newkrigercampus.extras.CustomEditText
                android:id="@+id/edittext_newfeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_background"
                android:ems="10"
                android:gravity="top"
                android:hint="Tell us what you think (Optional)"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="4"
                android:paddingTop="5dp"
                android:paddingBottom="35dp"
                android:textSize="18sp" />

            <in.kriger.newkrigercampus.extras.CustomButton
                android:id="@+id/submit_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/profile_bar_gradient_round"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="18dp"
                android:textStyle="bold" />




