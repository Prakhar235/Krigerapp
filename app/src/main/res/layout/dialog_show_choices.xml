<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent">

    <in.kriger.newkrigercampus.extras.CustomTextView
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/profile_bar_gradient"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:textColor="@color/White"
        android:textSize="22sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <in.kriger.newkrigercampus.extras.CustomTextView
            android:id="@+id/notice"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textSize="22sp"/>

        <in.kriger.newkrigercampus.extras.CustomTextView
            android:id="@+id/notice1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Offline"
            android:textSize="15sp"/>


        <in.kriger.newkrigercampus.extras.CustomAutoCompleteTextView
            android:id="@+id/subjects_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@drawable/button_background_blue"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:padding="3dp"
            android:drawableRight="@drawable/ic_search_24dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/layout_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:flChildSpacing="8dp"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="8dp">

        </com.nex3z.flowlayout.FlowLayout>

        <in.kriger.newkrigercampus.extras.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_bar_gradient_round"
            android:layout_marginBottom="15dp"
            android:id="@+id/btn_next"
            android:padding="15dp"
            android:text="Next"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:layout_gravity="center|bottom"
            android:layout_marginRight="15dp"
            android:textColor="@color/White"

            />



    </LinearLayout>




</RelativeLayout>





