<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_marginTop="5dp"
    android:id="@+id/list_kiger"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_linear"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/imageButton_dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <in.kriger.newkrigercampus.extras.CustomTextView
                        android:id="@+id/sname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:textColor="@color/Black"
                        android:textSize="16sp" />


                    <in.kriger.newkrigercampus.extras.CustomButton
                        android:id="@+id/btn_tag"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_background_blue"
                        android:gravity="center"
                        android:minHeight="0dp"
                        android:textSize="12sp"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <in.kriger.newkrigercampus.extras.CustomButton
                            android:id="@+id/btn_admin"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:background="@drawable/button_background_green"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:scaleType="fitEnd"
                            android:text="Admin"
                            android:visibility="gone"
                            android:textColor="@color/Green"
                            android:textSize="13sp"

                            />

                        <in.kriger.newkrigercampus.extras.CustomButton
                            android:id="@+id/btn_owner"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:background="@drawable/button_background_red"
                            android:ellipsize="end"
                            android:layout_gravity="right|end"
                            android:scaleType="fitEnd"
                            android:layout_margin="-10dp"
                            android:text="Owner"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="@color/Offline"
                            android:textSize="13sp"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageview_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_add_circle_outline_black_24dp"
                        android:visibility="gone" />

                </LinearLayout>


                <in.kriger.newkrigercampus.extras.CustomTextView
                    android:id="@+id/sheadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/Grey"
                    android:textSize="13sp" />


            </LinearLayout>




        </LinearLayout>




    </LinearLayout>

</LinearLayout>
